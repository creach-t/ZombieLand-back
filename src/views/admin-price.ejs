                        <path d="M23.9,34.4c-1.2,0.1-2.2,1.2-2.1,2.4l0.7,8.8c0.1,1.2,1.1,2.1,2.2,2.1c0.1,0,0.1,0,0.2,0c1.2-0.1,2.2-1.2,2.1-2.4l-0.7-8.8
                      C26.3,35.2,25.2,34.3,23.9,34.4z"/>
                      </g>
                    </svg>
                  </button>
                </div>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
      <!-- Panneau secondaire pour la modification des informations du prix -->
      <div class="box column is-one-third">
        <!-- Formulaire de mise à jour du prix -->
        <form id="updateForm" method="POST" action="">
          <!-- prix -->
          <div class="field">
            <label class="label">Prix</label>
            <div class="control">
              <input class="input" type="text" name="price" id="price" disabled>
            </div>
            <label class="label">Prix Actif</label>
            <div class="control">
              <input class="checkbox" type="checkbox" name="is_active" id="isActive" disabled>
            </div>
          </div>

          <!-- Bouton de mise à jour -->
          <div class="has-text-centered mt-4">
            <button type="button" class="button is-success is-large" id="updateButton" disabled>Mettre à jour</button>
          </div>
        </form>
      </div>
    </div>
    <button class="button is-size-4 is-info ml-2" id="create-button">Créer un nouveau prix</button>
    </div>
  </div>
</div>

<!-- Modale de confirmation de suppression -->
<div id="deleteModal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Confirmer la suppression</p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <p>Êtes-vous sûr de vouloir supprimer ce prix ?</p>
    </section>
    <footer class="modal-card-foot">
      <button class="button is-danger" id="confirmDeleteBtn">Supprimer</button>
      <button class="button cancel">Annuler</button>
    </footer>
  </div>
</div>

<!-- Modale de confirmation de modification -->
<div id="editConfirmModal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Confirmer la modification</p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <p>Êtes-vous sûr de vouloir enregistrer les modifications ?</p>
    </section>
    <footer class="modal-card-foot">
      <button class="button is-success" id="confirmEditBtn">Enregistrer</button>
      <button class="button cancel">Annuler</button>
    </footer>
  </div>
</div>

<!-- Formulaire caché pour la suppression -->
<form id="deleteForm" method="POST" style="display: none;">
  <input type="hidden" name="price_id" id="deletePriceId">
</form>

<%- include('partials/side-menu') %>
<script src="/js/script_price.js"></script>
