<%- include('partials/header') %>

<% 
function getReviewStatusColor(status) {
  switch (status) {
    case 'approved':
      return '#28a745'; // Vert pour approuvé
    case 'pending':
      return '#aedeff'; // Jaune pour en attente
    default:
      return '#7f8c8d'; // Gris pour les statuts inconnus ou autres
  }
}

function translateReviewStatus(status) {
  switch (status) {
    case 'approved':
      return 'Approuvé';
    case 'pending':
      return 'En attente';
    default:
      return 'Inconnu';
  }
}
%>

<div class="container mt-6 has-navbar-fixed-top" style="margin-left: 250px !important;">
  <div class="panel">
    <p class="panel-heading has-background-danger-45 has-text-white has-text-weight-light">
      Gestion des commentaires
    </p>
  </div>

  <div class="field ml-4">
    <input id="showApproved" type="checkbox">
    <label for="showApproved" class="checkbox">Afficher les commentaires approuvés</label>
  </div>

  <div class="panel-block">

    <!-- Conteneur de la liste des reviews avec défilement -->
    <div class="box column is-two-third" style="height: 80vh; overflow-y: auto;">
      <ul id="reviewsList" style="font-family: Verdana, Geneva, Tahoma, sans-serif;">
        <% reviews.forEach(review => { %>
          <li class="box p-2 mb-3 reservation-item has-text-black has-background-white"
              data-status="<%= review.status %>">
            <!-- Contenu du commentaire -->
            <div class="is-flex is-justify-content-space-between is-align-items-center">
              
              <!-- Review ID -->
              <div class="has-text-weight-bold is-size-5 is-flex" style="align-items: center;">
                #<span class="has-text-danger-45"><%= review.review_id %></span>
              </div>
              
              <!-- Nom de l'utilisateur -->
              <div class="is-size-12 has-text-weight-bold is-flex-direction-column column is-one-fifth">
                <span class="has-text-weight-medium has-text-black has-text-weight-semibold">Utilisateur</span>
                <div>
                  <% if (review.client) { %>
                    <span class="has-text-danger-45 is-size-6 has-text-weight-bold">
                      <%= review.client.first_name %> <%= review.client.last_name %>
                    </span>
                  <% } else { %>
                    <span class="has-text-danger-45 is-size-6 has-text-weight-bold">Utilisateur inconnu</span>
                  <% } %>
                </div>
              </div>

              <div class="is-size-12 has-text-weight-bold column is-two-fifths">
                <span class="has-text-weight-medium has-text-black">Commentaire :</span>
                <p class="is-size-6 has-text-danger-45">
                  <%= review.content %>
                </p>
              </div>
      
              <!-- Statut du commentaire avec couleur et traduction -->
              <div class="has-text-right" style="min-width: 80px;">
                <p class="has-text-light has-text-weight-bold is-size-7" style="opacity: 0.8;">
                  <span class="has-text-black has-text-weight-bold p-2" style="border-radius: 7px; background-color: <%= getReviewStatusColor(review.status) %>;">
                    <%= translateReviewStatus(review.status) %>
                  </span>
                </p>
              </div>
              <div>

                <% if (review.status === 'pending') { %>
                <!-- Bouton de validation de la review -->
                              
                                <div>
                                  <button class="button is-success validate-button" data-review-id="<%= review.review_id %>">
                                    <svg fill="#000000" height="15px" width="15px" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 297 297" xml:space="preserve">
                                      <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                                      <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                                      <g id="SVGRepo_iconCarrier">
                                        <g>
                                          <path d="M294.033,82.033l-54.675-54.701c-1.899-1.901-4.479-2.97-7.167-2.97c-2.688,0-5.268,1.068-7.168,2.97L113.636,138.765
                                          L71.975,97.09c-1.901-1.9-4.479-2.969-7.169-2.969c-2.688,0-5.267,1.069-7.167,2.97L2.966,151.794
                                          c-3.955,3.958-3.955,10.372,0.001,14.329l103.501,103.545c1.9,1.902,4.478,2.97,7.168,2.97c2.689,0,5.267-1.067,7.167-2.97
                                          L294.033,96.361C297.989,92.405,297.989,85.99,294.033,82.033z"></path>
                                        </g>
                                      </g>
                                    </svg>
                                  </button>
                                </div>
                <% } %>
              
                <!-- Bouton de suppression -->
                <div class="is-flex is-flex-wrap-nowrap">
                  <button class="button is-danger delete-button" data-review-id="<%= review.review_id %>">
                    <svg fill="#000" width="15" height="15" version="1.1" id="lni_lni-trash-can" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 64 64" style="enable-background: new 0 0 64 64" xml:space="preserve">
                      <g>
                        <path d="M48.9,8.8h-7.7V7.1c0-3-2.4-5.4-5.4-5.4h-7.7c-3,0-5.4,2.4-5.4,5.4v1.7h-7.7c-2.9,0-5.3,2.4-5.3,5.3v3c0,2.2,1.3,4,3.2,4.8
                        l1.6,34.6c0.2,3.3,2.8,5.8,6.1,5.8h22.5c3.3,0,6-2.6,6.1-5.8L51,21.8c1.9-0.8,3.2-2.7,3.2-4.8v-3C54.2,11.2,51.8,8.8,48.9,8.8z
                        M27.3,7.1c0-0.5,0.4-0.9,0.9-0.9h7.7c0.5,0,0.9,0.4,0.9,0.9v1.7h-9.4V7.1z M14.3,14.1c0-0.4,0.3-0.8,0.8-0.8h33.8
                        c0.4,0,0.8,0.3,0.8,0.8v3c0,0.4-0.3,0.8-0.8,0.8H15.1c-0.4,0-0.8-0.3-0.8-0.8V14.1z M43.2,57.8H20.8c-0.9,0-1.6-0.7-1.6-1.5
                        l-1.6-33.9h28.9l-1.6,33.9C44.8,57.1,44.1,57.8,43.2,57.8z"/>
                        <path d="M32,32.4c-1.2,0-2.3,1-2.3,2.3v12.7c0,1.2,1,2.3,2.3,2.3c1.2,0,2.3-1,2.3-2.3V34.7C34.3,33.4,33.2,32.4,32,32.4z"/>
                        <path d="M40,34.4c-1.3-0.1-2.3,0.8-2.4,2.1l-0.6,8.8c-0.1,1.2,0.8,2.3,2.1,2.4c0.1,0,0.1,0,0.2,0c1.2,0,2.2-0.9,2.2-2.1l0.6-8.8
                        C42.1,35.5,41.2,34.5,40,34.4z"/>
                        <path d="M23.9,34.4c-1.2,0.1-2.2,1.2-2.1,2.4l0.7,8.8c0.1,1.2,1.1,2.1,2.2,2.1c0.1,0,0.1,0,0.2,0c1.2-0.1,2.2-1.2,2.1-2.4
                        l-0.7-8.8C26.3,35.2,25.2,34.3,23.9,34.4z"/>
                      </g>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>

    <!-- Modale de confirmation de validation -->
    <div id="validateModal" class="modal">
      <div class="modal-background"></div>
      <div class="modal-card">
        <header class="modal-card-head">
          <p class="modal-card-title">Confirmer la validation</p>
          <button class="validate" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
          <p>Êtes-vous sûr de vouloir valider cette review ?</p>
        </section>
        <footer class="modal-card-foot">
          <button class="button is-danger" id="confirmValidateBtn">Valider</button>
          <button class="button cancel">Annuler</button>
        </footer>
      </div>
    </div>

    <!-- Modale de confirmation de suppression -->
    <div id="deleteModal" class="modal">
      <div class="modal-background"></div>
      <div class="modal-card">
        <header class="modal-card-head">
          <p class="modal-card-title">Confirmer la suppression</p>
          <button class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
          <p>Êtes-vous sûr de vouloir supprimer cette review ?</p>
        </section>
        <footer class="modal-card-foot">
          <button class="button is-danger" id="confirmDeleteBtn">Supprimer</button>
          <button class="button cancel">Annuler</button>
        </footer>
      </div>
    </div>
    <!-- Conteneur pour l'infobulle de succès -->
    <div id="success-tooltip" class="notification is-success is-hidden"></div>

    <!-- Conteneur pour l'infobulle d'erreur -->
    <div id="error-tooltip" class="notification is-danger is-hidden"></div>


    <!-- Formulaire caché pour la suppression -->
    <form id="deleteForm" method="POST" style="display: none;">
      <input type="hidden" name="review_id" id="deleteReviewId">
    </form>
    <form id="updateForm" method="POST" style="display: none;">
      <input type="hidden" name="review_id" id="updateReviewId">
    </form>

    <script src="/js/script_review.js"></script>
    <%- include('partials/side-menu') %>